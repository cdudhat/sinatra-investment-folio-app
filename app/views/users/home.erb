<% @title="Welcome to your Investments Page" %>
<% @heading="Hi, " + @user.name.to_s + "! Welcome to your Investments Page" %>

<h3>Your Investments - Current Total Investments Value: $<%= @user.total_value %></h3>

<!-- STOCKS -->
<% if !@user.stocks.empty? %>
  <h3>Stocks</h3>
  <% @user.stocks.each do |stock| %>
    <ul>
      <li>Company Name/Ticker: <%= stock.name %></a></li>
      <li>Price per Share: $<%= stock.price %></li>
      <li>Number of Shares: <%= stock.number %></li>
    </ul>

    <form class="" action="/stock/<%= stock.id %>">
      <input type="submit" value="View">
    </form>
    <form class="" action="/stock/<%= stock.id %>/edit">
      <input type="submit" value="Edit">
    </form>
    <form method="post" action="/stock/<%= stock.id %>">
      <input id="hidden" type="hidden" name="_method" value="DELETE">
      <input type="submit" id="delete" value="Delete">
    </form>

    <br /><br />
  <% end %>
<% end %>

<!-- BANK PRODUCTS -->
<% if !@user.products.empty? %>
  <hr>
  <h3>Bank Products</h3>
  <% @user.products.each do |product| %>
    <ul>
      <li>Bank Name: <%= product.name %></a></li>
      <li>Investment Type: <%= product.category %></li>
      <li>Investment Value: $<%= product.value %></li>
    </ul>

    <form class="" action="/product/<%= product.id %>">
      <input type="submit" value="View">
    </form>
    <form class="" action="/product/<%= product.id %>/edit">
      <input type="submit" value="Edit">
    </form>
    <form method="post" action="/product/<%= product.id %>">
      <input id="hidden" type="hidden" name="_method" value="DELETE">
      <input type="submit" id="delete" value="Delete">
    </form>

    <br /><br />
  <% end %>
<% end %>

<!-- RETIREMENT FUNDS -->
<% if !@user.funds.empty? %>
